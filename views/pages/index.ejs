<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
</head>

<body>
  <section class="hero is-fullheight yellow-gradient">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <nav class="navbar">
        <div class="container" <div class="navbar-brand">
          <a class="navbar-item has-text-white" href="/">
            HN Mail
          </a>
        </div>
    </div>
    </nav>
    </div>

    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title has-text-white">
          <p>Hacker News</p>
          <p>Tailored For You</p>
        </h1>
        <br>
        <h2 class="subtitle has-text-white">
          <p>Identify a few topics interest you the most and</p>
          <p>start receiving a curated list of articles every week.</p>
        </h2>
      </div>
    </div>

  </section>

  <section class="section" id="capture">
    <div class="container">
      <form action="/subscribe" method="POST">
        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Email</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control has-icons-left has-icons-right">
                <input class="input" type="email" name="email" placeholder="">
                <span class="icon is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <label class="label">Topics</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control has-icons-left has-icons-right">
                <input class="input" type="text" name="topics" placeholder="">
                <span class="icon is-left">
                  <i class="fas fa-lightbulb"></i>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!-- Left empty for spacing -->
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <button class="button is-primary">
                  Subscribe
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>

  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</body>

</html>